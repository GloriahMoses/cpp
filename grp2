#include <iostream>
#include <string>
#include <time.h>
using namespace std;

char type;
string cashier_name;
int total_price = 0;
string name, menu[4] = {"A. French Fries", "B. Beef Choma", "C. Liver Fryr", "D. Chicken Tikka",};
int prices[4] = {200, 150, 100, 80};
int vip_prices[4] = {400, 650, 300, 120};

int meenu()
{
    int no_items, order[no_items];
    cout<<"For Regular enter 'r', For VIP enter 'v':";
    cin>> type;
    type = tolower(type);
    
    if (type == 'r'){
        cout <<" ITEM\t\t PRICE\n"<<endl;
        cout <<menu[0]<<" Ksh"<<prices[0]<<"\n"<<endl;
        cout <<menu[1]<<" Ksh"<<prices[1]<<"\n"<<endl;
        cout <<menu[2]<<" Ksh"<<prices[2]<<"\n"<<endl;
        cout <<menu[3]<<" Ksh"<<prices[3]<<"\n"<<endl;
	    
        cout<<"How many items would you like to order: ";
        cin>>no_items;
        int *order = new int[no_items];  
        for (int i = 0; i < no_items; i++){
            char item;
            cout<<"Order Item " <<i+1 <<" :";
            cin>>item;
            item = tolower(item);
            order[i] = item;
            
            if (item == 'a'){
                total_price = total_price + prices[0];
                name = menu[0];}
                
            else if (item == 'b'){
                total_price = total_price + prices[1];
                name = menu[1];}
                
            else if (item == 'c'){
                total_price = total_price + prices[2];
                name = menu[2];}
                
            else if (item == 'd'){
                total_price = total_price + prices[3];
                name = menu[3];}//cout<<name<<endl;        
        }
        char choice;
        cout <<"To add items enter y, to remove enter r: ";
        cin>>choice;
        if(choice == 'y'){
          cout<<"How many items would you like to add to your order: ";
          cin>>no_items;
        }

        cout <<"Net Price : "<<total_price <<endl;

    }  
            else if (type == 'v'){
              cout <<" ITEM\t\t PRICE\n"<<endl;
              cout <<menu[0]<<" Ksh "<<vip_prices[0]<<"\n"<<endl;
              cout <<menu[1]<<" Ksh "<<vip_prices[1]<<"\n"<<endl;
              cout <<menu[2]<<" Ksh "<<vip_prices[2]<<"\n"<<endl;
	            cout <<menu[3]<<" Ksh "<<vip_prices[3]<<"\n"<<endl;
	            
	              int no_items;
                cout<<"How many items would you like to order: ";
                cin>>no_items;
                int order[no_items];  
                for (int i = 0; i < no_items; i++){
                    char item;
                    cout<<"Order Item " <<i+1 <<" :";
                    cin>>item;
                    order[i] = item;

                   if (item == 'a'){
                     total_price = total_price + vip_prices[0];
                     name = menu[0];}
                     
                   else if (item == 'b'){
                     total_price = total_price + vip_prices[1];}
                     
                   else if (item == 'c'){
                     total_price = total_price + vip_prices[2];}
                     
                   else if (item == 'd'){
                     total_price = total_price + vip_prices[3];}                  
                }
                
            cout <<"Sub Total: "<<total_price <<endl;

            double discount = 0.05;
            discount = total_price*discount;
            total_price = total_price - discount; 

            cout<<"You have been offered a discount of Kshs: "<<discount;
    
            }

            cout <<"\nYour Order is as follows:"<<endl;
            cout <<"========================="<<endl;
            cout <<"Net Price : "<<total_price <<endl;
    return 0;	
}

void tax(){
  double vat = 1.16 * total_price;
  cout<<"VAT:"<<vat<<endl;
}

string cashier(){
  cout<<"You were served by: "<<cashier_name;
  return "0";
}

int main(){
    time_t rawtime;
    time(&rawtime);
    cout<<"\t\t\t********************************"<<endl;
    cout<<"\t\t\t WELCOME TO GROUP TWO RESTRAUNT" <<endl;
    cout<<"\t\t\t********************************"<<endl;
    cout << "\t\t\t "<<ctime(&rawtime) <<endl;

    cout<<"Served by: ";
    cin>> cashier_name;
	
    meenu();
    tax();
    cashier();
  }

  
