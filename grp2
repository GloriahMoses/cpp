int meenu()
{
	time_t rawtime;
	time(&rawtime);
	cout<<"\t\t\t*********************************"<<endl;
    cout<<"\t\t\t  WELCOME TO GROUP TWO RESTRAUNT" <<endl;
    cout<<"\t\t\t*********************************"<<endl;
	cout << "\t\t\t OUR MENU: "<<ctime(&rawtime) <<endl;
	
	cout <<menu[0]<<" Price: Ksh"<<a<<"\n"<<endl;
	cout <<menu[1]<<" Price: Ksh"<<b<<"\n"<<endl;
	cout <<menu[2]<<" Price: Ksh"<<c<<"\n"<<endl;
	cout <<menu[3]<<" Price: Ksh"<<d<<"\n"<<endl;
    
