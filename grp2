}

string order() 
{ 
  int items;
  cout<< "How many items would you like to order:";
  cin >> items;
  int person[items];
  for (int i = 0; i <= items; i++){
      cout << "Order " << i + 1 << ": ";
      cin >> person[i];
     }

    return "0";
}

int main(){
    meenu();
    order();
    }
